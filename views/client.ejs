<%- include("header") -%>
    <header>
      <div class="navbar navbar-light bg-light shadow-sm">
        <div class="container d-flex justify-content-between">
          <a href="#" class="navbar-brand d-flex align-items-center">
            <img src="images/landis_logo.png" width="20" height="20" style="margin-right: 10px" fill="none" alt="">
            <strong>Landis</strong>
          </a>
        </div>
      </div>
  </header>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>Clients</h1>
      <p class="lead text-muted">This page indicates how close the
clients are to being able to obtain a mortgage. <br>Factors considered are credit score and current savings balance.</p>
      <div class="page-buttons">
        <a href="/clients" class="btn btn-light my-2">Client</a>
        <a href="/statistics" class="btn btn-light my-2">Statistics</a>
      </div>
    </div>
  </section>

  <div class="album py-5">
    <div class="container">

      <div class="row">
        <% clientList.forEach((client, i) => { %>
         <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h3 class="card-name"><%=client.firstName%> <%=client.lastName%></h3>
                <p class="card-text">
                  <h2><%=mortagePercentages[i]%>%</h2>
                  <table width="100%">
                    <tr>
                      <th>Credit score</th>
                      <th>Savings balance</th>
                    </tr>
                    <tr>
                      <td><%=client.creditScore%></td>
                      <td><%=client.savingsBalance%></td>
                    </tr>
                  </table>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</main>

